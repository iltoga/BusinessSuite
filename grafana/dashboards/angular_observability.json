{
    "annotations": {
        "list": []
    },
    "description": "Angular Frontend observability: Errors, User activity, and Client-side logs",
    "title": "Angular Observability (provisioned)",
    "templating": {
        "list": [
            {
                "name": "service",
                "type": "query",
                "label": "Service",
                "hide": 0,
                "datasource": "Loki",
                "query": "label_values({service=~\".*\"}, service)",
                "includeAll": true,
                "allValue": ".*"
            },
            {
                "name": "level",
                "type": "query",
                "label": "Level",
                "hide": 0,
                "datasource": "Loki",
                "query": "label_values({level=~\".*\"}, level)",
                "includeAll": true,
                "allValue": ".*"
            }
        ]
    },
    "panels": [
        {
            "type": "stat",
            "title": "Active Frontend Errors (5m)",
            "gridPos": {
                "x": 0,
                "y": 0,
                "w": 6,
                "h": 5
            },
            "targets": [
                {
                    "expr": "sum(count_over_time({service=~\"$service\", level=\"error\"} [5m]))",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "color": {
                        "mode": "thresholds"
                    },
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {
                                "color": "green",
                                "value": null
                            },
                            {
                                "color": "red",
                                "value": 1
                            }
                        ]
                    }
                }
            }
        },
        {
            "type": "timeseries",
            "title": "Frontend Error Frequency",
            "gridPos": {
                "x": 6,
                "y": 0,
                "w": 18,
                "h": 5
            },
            "targets": [
                {
                    "expr": "sum(count_over_time({service=~\"$service\", level=\"error\"} [1m]))",
                    "refId": "A"
                }
            ]
        },
        {
            "type": "logs",
            "title": "Frontend Application Logs",
            "gridPos": {
                "x": 0,
                "y": 5,
                "w": 24,
                "h": 10
            },
            "targets": [
                {
                    "expr": "{service=~\"$service\", level=~\"$level\"}",
                    "refId": "A"
                },
                {
                    "expr": "{filename=~\"/host_logs/frontend.log\", level=~\"$level\"}",
                    "refId": "B"
                }
            ]
        },
        {
            "type": "table",
            "title": "Unique Users Activity (Loki)",
            "gridPos": {
                "x": 0,
                "y": 15,
                "w": 24,
                "h": 10
            },
            "targets": [
                {
                    "expr": "sum by (user) (count_over_time({application=~\".*\"} [24h]))",
                    "refId": "A"
                }
            ]
        }
    ],
    "schemaVersion": 36,
    "version": 1
}