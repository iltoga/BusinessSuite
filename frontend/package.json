{
  "name": "business-suite-frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --proxy-config proxy.conf.json",
    "start:lan": "ng serve --host 0.0.0.0 --port 4200 --ssl false --allowed-hosts --proxy-config proxy.conf.json",
    "start_public": "bun run start:lan",
    "serve:static": "bun server-static.js",
    "build": "NG_BUILD=true ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "serve:ssr:business-suite-frontend": "node dist/business-suite-frontend/server/server.mjs",
    "generate:api": "bunx @openapitools/openapi-generator-cli generate -i ../backend/schema.yaml -g typescript-angular -o src/app/core/api --additional-properties=fileNaming=kebab-case,ngVersion=21,modelPropertyNaming=camelCase",
    "mock:server": "bunx prism mock ../backend/schema.yaml -p 4010 --dynamic -h 0.0.0.0",
    "start:mock": "ng serve --configuration=mock",
    "dev:mock": "concurrently \"bun run mock:server\" \"BACKEND_URL=http://localhost:4010 bun run start:mock\""
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "bun@1.3.6",
  "dependencies": {
    "@ngrok/ngrok": "^1.5.1",
    "@angular/cdk": "^21",
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/platform-server": "^21.1.0",
    "@angular/router": "^21.1.0",
    "@angular/service-worker": "^21.1.0",
    "@angular/ssr": "^21.1.1",
    "chart.js": "^4.5.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "express": "^5.1.0",
    "http-proxy-middleware": "^3.0.5",
    "lucide-angular": "^0.563.0",
    "marked": "^17.0.2",
    "ng2-charts": "^8.0.0",
    "ngx-extended-pdf-viewer": "^25.6.4",
    "ngx-sonner": "^3.1.0",
    "pdfjs-dist": "^5.4.530",
    "rxjs": "~7.8.0",
    "tailwind-merge": "^3.4.0",
    "tslib": "^2.3.0",
    "zard-ui": "^0.0.1"
  },
  "devDependencies": {
    "@angular/build": "^21.1.1",
    "@angular/cli": "^21.1.1",
    "@angular/compiler-cli": "^21.1.0",
    "@angular/platform-browser-dynamic": "^21.1.5",
    "@openapitools/openapi-generator-cli": "^2.28.0",
    "@playwright/test": "^1.58.0",
    "@scalar/cli": "^1.6.2",
    "@stoplight/prism-cli": "^5.14.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/express": "^5.0.1",
    "@types/node": "^20.17.19",
    "@vitest/browser-playwright": "^4.0.18",
    "axe-playwright": "^1.2.0",
    "concurrently": "^9.2.1",
    "fake-indexeddb": "^6.2.5",
    "fast-check": "^4.5.3",
    "jsdom": "^27.1.0",
    "playwright": "^1.58.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}
