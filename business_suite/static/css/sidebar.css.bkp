/* Remove animation from the sidebar when collapsed */
#sidebar.active {
    margin-left: -250px;
    transition: none;
}

/* Remove animation from the content when the sidebar is collapsed */
#content.active {
    margin-left: 0px;
    transition: none;
}

/* Remove animation from showing and hiding the sidebar */
#sidebar.active.animate,
#content.active.animate {
    transition: none;
}

/* Style the sidebar top container */
#sidebar .sidebar-top {
    position: absolute;
    top: 10px;
    right: 10px;
}

/* Style the sidebar toggle button */
#sidebarCollapse {
    position: absolute;
    top: 20px;
    /* adjust as needed */
    right: 20px;
    /* adjust as needed */
    z-index: 1000;
    /* to ensure it's above other elements */
}

/* Style the sidebar when it is active */
#sidebar.active {
    margin-left: -200px;
    /* Adjust this value based on the width of your sidebar */
}

/* Hide all content of the sidebar other than the toggle button when the sidebar is not active */
#sidebar:not(.active)>*:not(.sidebar-top) {
    display: none;
}

/* Adjust the sidebar position to stop at least 50px before the edge of the screen */
#sidebar.active {
    padding-right: 50px;
}